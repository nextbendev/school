<!DOCTYPE html>
<html>
  <head>
    <title>Ben</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/8b41eb6f53.js" crossorigin="anonymous"></script>

  </head>

  <body>

    <%= render 'blox/navbar' %>
    <%= render 'blox/jumbotron' %>


    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="container">
      <%= yield %>
    </div>

    <%= render 'blox/footer' %>

  </body>
</html>
